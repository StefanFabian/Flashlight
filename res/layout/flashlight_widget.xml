<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/widget_margin_horizontal"
    android:layout_marginTop="@dimen/widget_marginTop"
    android:layout_marginRight="@dimen/widget_margin_horizontal"
    android:layout_marginBottom="@dimen/widget_marginBottom"
    android:background="@drawable/widget_background"
    android:padding="4dp">
    <ImageView
        android:id="@+id/widget_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/flashlight_icon"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/widget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:text="@string/off" />
</LinearLayout>